{% extends 'base.html.twig' %}

{% block title %}Hello LivreController!{% endblock %}

{% block body %}

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <th>ID</th>
            <th>Couverture</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Disponible</th>
            <th>actions</th>
        </thead>
        <tbody>
            {% for livre in liste_livres %}
                <tr>
                    <td>{{ livre.id }}</td>
                    <td>
                        <img src="{{ url_images_livres ~ livre.couverture }}" alt="Pas de couverture">
                    </td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.auteur }}</td>
                    <td>{{ livre in livres_indisponibles ? "Non" : "Oui" }}</td>
                    <td>
                        <a href="{{ path("livre_afficher", {id: livre.id}) }}" >
                            <i class="fa fa-file"></i>
                        </a>
                        <a href="{{ path("livre_modifier", {id: livre.id}) }}" >
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="{{ path("livre_supprimer", {id: livre.id}) }}" >
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
